{
  "name": "moonlight-web",
  "version": "1.0.0",
  "description": "",
  "main": "web/index.ts",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "web"
      ],
      "extensions": "ts,html,svg,png,rs",
      "ignore": "web/api_bindings.d.ts",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "npm-watch build",
    "build": "cargo test export_bindings && tsc && npm run copy-static",
    "copy-static": "cpx \"web/**/*.{html,css,svg,png}\" dist/"
  },
  "license": "GPL-3.0-or-later",
  "private": "true",
  "devDependencies": {
    "cpx": "^1.5.0",
    "npm-watch": "^0.13.0",
    "typescript": "^5.9.2"
  }
}